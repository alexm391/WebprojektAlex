@model List<Webanwendung.Models.Booking>
@using Webanwendung.Models

@{
    ViewBag.Title = "ShowBookings";
}


<style>
    .tableCell {
        padding-right: 20px;
    }
</style>

<h2>Buchungen</h2>

@if (Model != null)
{
    <table>
        <thead>
            <tr>
                <td>Anfangsdatum</td>
                <td>Enddatum</td>
                <td class="tableCell">Betten</td>
                <td class="tableCell">Nächte</td>
                <td>Preis</td>
            </tr>

        </thead>
        <tbody>
            @foreach (Booking b in Model)
            {
                <tr>
                    <td class="tableCell">@b.StartDate.ToLongDateString()</td>
                    <td class="tableCell">@b.EndDate.ToLongDateString()</td>
                    <td class="tableCell">@b.Beds</td>
                    <td class="tableCell">@b.Duration</td>
                    <td class="tableCell">@b.PriceForStay</td>
                    @using (Html.BeginForm("Delete", "Booking"))
                    {
                        <td><input type="hidden" name="idToDelete" value="@b.ID" /></td>
                        <td><input type="submit" value="Löschen"  /></td>
                    }
                    @*<td>@Html.ActionLink("Löschen", "Delete", "Booking", new { idToDelete = b.ID }, null)</td>     
                    <td>@Ajax.ActionLink("Löschen", "Delete", "Booking", new { idToDelete = b.ID }, new AjaxOptions { HttpMethod = "post"})</td>*@
                </tr>
            }
        </tbody>
         <tfoot>
            <tr>
                <td colspan="6">Alle Buchungen</td>
            </tr> 
        </tfoot>
    </table>


}
else
{
    <p>Sie haben noch keine Zimmer gebucht</p>
}




